<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_fragment_scrolling_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gtrotter.eu.android.fragments.DetailFragment"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/detail_fragment_header_container"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        />

    <gtrotter.eu.android.slidingtab.SlidingTabLayout
        android:id="@+id/fragment_detail_sliding_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_detail_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>