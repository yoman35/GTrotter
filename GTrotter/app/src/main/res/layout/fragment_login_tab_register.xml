<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:paddingStart="@dimen/abc_action_bar_icon_vertical_padding_material">

            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:mtf_cardCollapsedHeight="4dp"
                app:mtf_cardColor="@color/colorPrimary"
                app:mtf_image="@drawable/ic_mode_edit_white_36dp"
                app:mtf_labelColor="@color/colorPrimary">

                <EditText
                    android:id="@+id/et_register_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="0dp"
                    android:hint="@string/et_register_first_name"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/white" />
            </com.github.florent37.materialtextfield.MaterialTextField>

            <View
                android:layout_width="16dp"
                android:layout_height="match_parent" />

            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:mtf_cardCollapsedHeight="4dp"
                app:mtf_cardColor="@color/colorPrimary"
                app:mtf_image="@drawable/ic_mode_edit_white_36dp"
                app:mtf_labelColor="@color/colorPrimary">

                <EditText
                    android:id="@+id/et_register_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/et_register_last_name"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/white" />
            </com.github.florent37.materialtextfield.MaterialTextField>
        </LinearLayout>

        <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:paddingStart="@dimen/abc_action_bar_icon_vertical_padding_material"
            app:mtf_cardCollapsedHeight="4dp"
            app:mtf_cardColor="@color/colorPrimary"
            app:mtf_image="@drawable/ic_insert_emoticon_white_36dp"
            app:mtf_labelColor="@color/colorPrimary">

            <EditText
                android:id="@+id/et_register_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/et_register_username"
                android:inputType="textPersonName"
                android:textColor="@android:color/white" />
        </com.github.florent37.materialtextfield.MaterialTextField>

        <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:paddingStart="@dimen/abc_action_bar_icon_vertical_padding_material"
            app:mtf_cardCollapsedHeight="4dp"
            app:mtf_cardColor="@color/colorPrimary"
            app:mtf_image="@drawable/ic_mail_outline_white_36dp"
            app:mtf_labelColor="@color/colorPrimary">

            <EditText
                android:id="@+id/et_register_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/et_register_mail"
                android:inputType="textEmailAddress"
                android:textColor="@android:color/white" />
        </com.github.florent37.materialtextfield.MaterialTextField>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:paddingStart="@dimen/abc_action_bar_icon_vertical_padding_material">

            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/abc_action_bar_icon_vertical_padding_material"
                android:layout_marginStart="0dp"
                android:layout_weight="9"
                app:mtf_cardCollapsedHeight="4dp"
                app:mtf_cardColor="@color/colorPrimary"
                app:mtf_image="@drawable/ic_vpn_key_white_36dp"
                app:mtf_labelColor="@color/colorPrimary">

                <EditText
                    android:id="@+id/et_register_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/et_login_password"
                    android:inputType="textPassword"
                    android:textColor="@android:color/white" />
            </com.github.florent37.materialtextfield.MaterialTextField>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_login_hint_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/img_hint_password"
                    android:onClick="myOnClickedLogin"
                    android:src="@drawable/ic_info_outline_black_36dp" />
            </LinearLayout>


        </LinearLayout>

        <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:paddingStart="@dimen/abc_action_bar_icon_vertical_padding_material"
            app:mtf_cardCollapsedHeight="4dp"
            app:mtf_cardColor="@color/colorPrimary"
            app:mtf_image="@drawable/ic_vpn_key_white_36dp"
            app:mtf_labelColor="@color/colorPrimary">

            <EditText
                android:id="@+id/et_register_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/et_login_confirm_password"
                android:inputType="textPassword"
                android:textColor="@android:color/white" />
        </com.github.florent37.materialtextfield.MaterialTextField>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="@string/or_connect_with"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/middle"
            android:gravity="center">

            <ImageView
                android:id="@+id/btn_register_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:contentDescription="@string/image_facebook_description"
                android:onClick="myOnClickedLogin"
                android:src="@drawable/ic_facebook_50" />

            <ImageView
                android:id="@+id/btn_register_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:contentDescription="@string/image_google_plus_description"
                android:onClick="myOnClickedLogin"
                android:src="@drawable/ic_google_plus_50" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:onClick="myOnClickedLogin"
            android:text="@string/tab_register_title"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark"
            android:textSize="32sp"/>
    </LinearLayout>
</ScrollView>